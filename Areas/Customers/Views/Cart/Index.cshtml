@model BookShop.Models.ViewModels.ShoppingCartVM


<form method="post">
    <br />
    <div class="container">
        <div class="card">
            <div class="card-header bg-primary text-light ml-0">
                <div class="row">
                    <div class="col-6 pt-2">
                        
                        <h4><i class="bi bi-cart"></i>&nbsp; Shopping Cart</h4>

                    </div>
                   
                </div>
            </div>

            <div class="card-body">
                @foreach (var item in Model.CartList)
                {


                <div class="row">
                    <div class="d-none d-lg-block col-lg-1 text-center py-2">
                        <img src="@item.Product.ImageUrl" class="" width="100%" />
                    </div>
                    <div class="col-12 col-lg-6 pt-1">
                        <h5><strong>@item.Product.Title</strong></h5>
                        <small>@Html.Raw(item.Product.Description)</small>
                    </div>
                    <div class="col-12  col-lg-5 text-center row">
                        <div class="col-5 text-md-right pt-4">
                            <h6><strong>@item.Price.ToString("c") &nbsp; Qty: @item.Count </strong></h6>
                        </div>
                        <div class="col-4 col-sm-4 col-lg-5 pt-2">

                            <div class=" btn-group" role="group">

                                <a asp-action="Plus" asp-route-cartId="@item.Id" class="btn btn-primary rounded">
                                    <i class="bi bi-plus-square"></i>
                                </a> &nbsp;&nbsp;
                                <a asp-action="Minus" asp-route-cartId="@item.Id" class="btn btn-warning rounded">
                                    <i class="bi bi-dash-square"></i>
                                </a>
                          
                            </div>

                        </div>
                        <div class="col-2 col-sm-3 col-lg-2 text-right pt-2">
                            <a asp-action="Remove" asp-route-cartId="@item.Id" class="btn btn-danger">
                                <i class="bi bi-trash-fill"></i>
                            </a>
                        </div>
                    </div>
                </div>


                <hr />
                }
                <div class="row">
                    <div class="col-12 col-md-6 offset-md-6 col-lg-4 offset-lg-8 pr-4">
                        <ul class="list-group">
                            <li class="list-group-item d-flex justify-content-between bg-light">
                                <span class="text-muted fw-bold"> Total</span>
                                <span class="text-muted"><strong>@Model.OrderHeader.OrderTotal.ToString("c")</strong></span>
                            </li>
                        </ul>
                    </div>
                </div>

            </div>

            <div class="card-footer">
                <div class="card-footer row justify-content-end">
                    <div class="col-6 col-lg-4 col-md-6 ">
                        <a asp-area="Customers" asp-controller="Home" asp-action="Index" class="btn btn-dark form-control">Continue Shopping</a>
                        </div>
                    <div class="col-6 col-lg-4 col-md-6 ">
                        <a asp-area="Customers" asp-controller="Cart" asp-action="Summary" class="btn btn-success form-control">Summary</a>

                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
